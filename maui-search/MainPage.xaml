<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_search.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry
                x:Name="CityEntry"
                Placeholder="Digite a cidade" />

            <DatePicker
                x:Name="DateEntry"
                Format="D" />

            <Button
                x:Name="SearchWeatherBtn"
                Text="Pesquisar Previsão"
                Clicked="OnSearchWeatherClicked" />

            <Label
                x:Name="ResultLabel"
                Text="Resultado" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
