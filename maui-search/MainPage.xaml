<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="maui_search.MainPage"
             Shell.NavBarIsVisible="False"
             >

    <ScrollView BackgroundColor="#000009">
        <VerticalStackLayout
            Padding="32"
            Spacing="25">
            <Label
                x:Name="TitleLabel"
                Text="Weather App"
                FontSize="Large"
                FontAttributes="Bold"
                />
            <Entry
                x:Name="CityEntry"
                Placeholder="Digite a cidade" />

            <DatePicker
                x:Name="DateEntry"
                Format="D" />

            <Button
                x:Name="SearchWeatherBtn"
                Text="Pesquisar Previsão"
                Clicked="OnSearchWeatherClicked" />

            <Label
                x:Name="ResultLabel"
                Text="Resultado" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
